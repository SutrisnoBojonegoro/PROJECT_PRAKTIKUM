<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        >

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="4">

            <TextView
                android:id="@+id/tV_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Decimal"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/editText_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:ems="9"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/tV_bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Binary"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/tV_binary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="_____________"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tV_hex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Hexadecimal"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tV_hex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="_____________"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/tV_okt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Octal"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/tV_okt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="_____________"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"/>

        </GridLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        >

        <GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="1"
                android:layout_marginLeft="20dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn1_click"
                />
            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="2"
                android:layout_marginLeft="30dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn2_click"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="3"
                android:layout_marginLeft="30dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn3_click"
                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="4"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn4_click"
                />
            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="5"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn5_click"
                />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:text="6"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn6_click"
                />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="7"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn7_click"
                />
            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="8"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn8_click"
                />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:text="9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn9_click"
                />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="0"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn0_click"
                />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:text="Delete"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorGreen"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAlignment="center"
                android:onClick="btn_delete_click"
                />

        </GridLayout>

    </LinearLayout>


</RelativeLayout>
